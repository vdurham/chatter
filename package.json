{
  "repository": {
    "type": "git"
  },
  "scripts": {
    "clean:dist": "rm -rf ./.dist",
    "clean:all": "rm -rf ./.parcel-cache ./.dist",
    "build": "parcel build",
    "build:server": "tsc && ((cp -r .dist/client .server.debug/.dist) || (mkdir .server.debug/.dist &&  cp -r .dist/client .server.debug/.dist))",
    "build:trials": "tsc trials/ts-eg/*.ts --esModuleInterop --sourceMap --outDir trials/ts-eg/.out",
    "watch:trials": "tsc trials/ts-eg/*.ts --esModuleInterop --sourceMap --outDir trials/ts-eg/.out --watch",
    "serve:index": "parcel client/pages/index.html --dist-dir .client.debug --no-cache",
    "serve:auth": "parcel client/pages/auth.html --dist-dir .client.debug --no-cache",
    "serve:chat": "parcel client/pages/chat.html --dist-dir .client.debug --no-cache",
    "serve:friends": "parcel client/pages/friends.html --dist-dir .client.debug --no-cache",
    "clean:build": "npm-run-all clean:all build",
    "start": "node ./.dist/server/serve",
    "watch": "nodemon --watch client --watch server --watch .env -e js,ts,html,pug,css,json --exec npm-run-all build start",
    "test:model": "jest ./tests/server.tests/model.tests --env=node",
    "test:rest:auth": "jest ./tests/server.tests/rest.tests/auth.rest.test --env=node --runInBand --detectOpenHandles",
    "test:rest:chat": "jest ./tests/server.tests/rest.tests/chat.rest.test --env=node --runInBand --detectOpenHandles",
    "test:rest:user": "jest ./tests/server.tests/rest.tests/user.rest.test --env=node --runInBand --detectOpenHandles",
    "test:rest:leave": "jest ./tests/server.tests/rest.tests/leave.rest.test --env=node --runInBand --detectOpenHandles",
    "test:rest": "jest ./tests/server.tests/rest.tests/home.rest.test --env=node && jest ./tests/server.tests/rest.tests/auth.rest.test --env=node && jest ./tests/server.tests/rest.tests/chat.rest.test --env=node",
    "test:client": "jest ./tests/client.tests --env=jsdom --detectOpenHandles",
    "test:server": "npm-run-all test:model test:rest",
    "test:exP1": "jest ./tests/trials.tests/exP1.test --env=node --detectOpenHandles",
    "test:exP2": "jest ./tests/trials.tests/exP2.test --env=node --detectOpenHandles",
    "lint": "eslint ./",
    "pug": "node ./tools/buildForPug",
    "postfixCalc": "ts-node ./trials/ts-eg/postfixCalc",
    "serve": "ts-node server/serve",
    "later": "echo \"Some future command...\" && exit 1"
  },
  "dependencies": {
    "@parcel/transformer-pug": "^2.9.3",
    "@parcel/watcher": "^2.3.0",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "install": "^0.13.0",
    "jquery": "^3.7.0",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.6.10",
    "npm": "^9.8.1",
    "parcel": "latest",
    "pug": "^3.0.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "type": "commonjs",
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.2",
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/http-terminator": "^2.0.2",
    "@types/jest": "^29.5.2",
    "@types/jquery": "^3.5.16",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.11.17",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "events": "^3.3.0",
    "http-terminator": "^3.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-expect-message": "^1.1.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "prettier": ">=3.0.0",
    "process": "^0.11.10",
    "punycode": "^1.4.1",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "string_decoder": "^1.3.0",
    "timers-browserify": "^2.0.12",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "url": "^0.11.1",
    "util": "^0.12.5"
  },
  "targets": {
    "client": {
      "source": [
        "client/pages/index.html",
        "client/pages/friends.html",
        "client/pages/auth.html",
        "client/pages/chat.html"
      ],
      "distDir": ".dist/client",
      "context": "browser"
    },
    "server": {
      "source": "server/serve.ts",
      "distDir": ".dist/server",
      "context": "node",
      "includeNodeModules": false
    }
  }
}
